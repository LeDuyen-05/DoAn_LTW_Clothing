@model DoAn_LTW_Clothing.Models.HomeVM

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<div class="main_slider" style="background-image:url('@Url.Content("~/assets/images/slider_1.jpg")')">
    <div class="container fill_height">
        <div class="row align-items-center fill_height">
            <div class="col">
                <div class="main_slider_content">
                    <h6>Spring / Summer Collection 2025</h6>
                    <h1>Get up to 30% Off New Arrivals</h1>
                    <div class="red_button shop_now_button"><a href="@Url.Action("Index", "Products")">shop now</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="banner">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.BannerCategories)
            {
                <div class="col-md-4">
                    <div class="banner_item align-items-center" style="background-image:url('@Url.Content("~/assets/images/banner_" + item.CategoryId + ".jpg")')">
                        <div class="banner_category">
                            <a href="@Url.Action("Index", "Products", new { id = item.CategoryId })">
                                @item.CatName
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="new_arrivals">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>New Arrivals</h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col text-center">
                <div class="new_arrivals_sorting">
                    <ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">all</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".women">women's</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".accessories">accessories</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".men">men's</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

                    @if (Model.NewArrivals != null)
                    {
                        foreach (var item in Model.NewArrivals)
                        {
                            string cssClass = "accessories";
                            if (item.Category != null && item.Category.CategoryGroup != null)
                            {
                                cssClass = item.Category.CategoryGroup.GroupCode.Trim().ToLower();
                            }

                            decimal price = 0;
                            if (item.ProductVariants != null && item.ProductVariants.Any()) { price = item.ProductVariants.Min(v => v.Price); }

                            <div class="product-item @cssClass">
                                <div class="product discount product_filter" style="border: 1px solid #eee; height: 100%; display: flex; flex-direction: column;">

                                    <div class="product_image" style="height: 240px; display: flex; align-items: center; justify-content: center; overflow: hidden; width: 100%;">
                                        <img src="@Url.Content("~/assets/images/" + (item.MainImage ?? "no-image.png"))"
                                             alt="@item.ProductName"
                                             style="max-height: 100%; max-width: 100%; width: auto; height: auto;">
                                    </div>

                                    <div class="favorite favorite_left"></div>

                                    @if (item.IsActive == false)
                                    {
                                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Sold</span></div>
                                    }

                                    <div class="product_info" style="padding: 15px; text-align: center; flex-grow: 1;">
                                        <h6 class="product_name" style="height: 20px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; margin-bottom: 5px;">
                                            <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">@item.ProductName</a>
                                        </h6>
                                        <div class="product_price" style="margin-top: 5px;">
                                            @(price > 0 ? price.ToString("#,##0", culture) + "₫" : "Liên hệ")
                                        </div>
                                    </div>

                                    <div class="red_button add_to_cart_button" style="visibility: visible !important; opacity: 1 !important; position: static !important; width: 100% !important; margin: 0 !important; border-radius: 0;">
                                        <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" style="display: block; width: 100%;">add to cart</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<div class="deal_ofthe_week">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="deal_ofthe_week_img">
                    @if (Model.DealProduct != null)
                    {
                        <img src="@Url.Content("~/assets/images/" + (Model.DealProduct.MainImage ?? "deal_ofthe_week.png"))" alt="" style="max-height: 400px; object-fit: contain;">
                    }
                    else
                    {
                        <img src="~/assets/images/deal_ofthe_week.png" alt="">
                    }
                </div>
            </div>
            <div class="col-lg-6 text-right deal_ofthe_week_col">
                <div class="deal_ofthe_week_content d-flex flex-column align-items-center float-right">
                    <div class="section_title"><h2>Deal Of The Week</h2></div>
                    <ul class="timer">
                        <li class="d-inline-flex flex-column justify-content-center align-items-center"><div id="day" class="timer_num">03</div><div class="timer_unit">Day</div></li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center"><div id="hour" class="timer_num">15</div><div class="timer_unit">Hours</div></li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center"><div id="minute" class="timer_num">45</div><div class="timer_unit">Mins</div></li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center"><div id="second" class="timer_num">23</div><div class="timer_unit">Sec</div></li>
                    </ul>
                    @if (Model.DealProduct != null)
                    {
                        <div class="red_button deal_ofthe_week_button"><a href="@Url.Action("Details", "Products", new { id = Model.DealProduct.ProductId })">shop now</a></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="best_sellers">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>Best Sellers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product_slider_container">
                    <div class="owl-carousel owl-theme product_slider">

                        @if (Model.BestSellers != null)
                        {
                            foreach (var item in Model.BestSellers)
                            {
                                decimal price = 0;
                                if (item.ProductVariants != null && item.ProductVariants.Any()) { price = item.ProductVariants.Min(v => v.Price); }

                                <div class="owl-item product_slider_item">
                                    <div class="product-item">
                                        <div class="product discount" style="border: 1px solid #eee; height: 100%; display: flex; flex-direction: column;">

                                            <div class="product_image" style="height: 240px; display: flex; align-items: center; justify-content: center; overflow: hidden; width: 100%;">
                                                <img src="@Url.Content("~/assets/images/" + (item.MainImage ?? "no-image.png"))"
                                                     alt="@item.ProductName"
                                                     style="max-height: 100%; max-width: 100%; width: auto; height: auto;">
                                            </div>

                                            <div class="favorite favorite_left"></div>

                                            <div class="product_info" style="padding: 15px; text-align: center; flex-grow: 1;">
                                                <h6 class="product_name" style="height: 20px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; margin-bottom: 5px;">
                                                    <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">@item.ProductName</a>
                                                </h6>

                                                <div class="product_price" style="margin-top: 5px;">
                                                    @(price > 0 ? price.ToString("#,##0", culture) + "₫" : "Liên hệ")
                                                </div>
                                            </div>

                                            <div class="red_button add_to_cart_button" style="visibility: visible !important; opacity: 1 !important; position: static !important; width: 100% !important; margin: 0 !important; border-radius: 0;">
                                                <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" style="display: block; width: 100%;">add to cart</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                    <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column"><i class="fa fa-chevron-left" aria-hidden="true"></i></div>
                    <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column"><i class="fa fa-chevron-right" aria-hidden="true"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blogs">
    <div class="container">
        <div class="row"><div class="col text-center"><div class="section_title"><h2>Latest Blogs</h2></div></div></div>
        <div class="row blogs_container">
            <div class="col-lg-4 blog_item_col"><div class="blog_item"><div class="blog_background" style="background-image:url('@Url.Content("~/assets/images/blog_1.jpg")')"></div><div class="blog_content d-flex flex-column align-items-center justify-content-center text-center"><h4 class="blog_title">Here are the trends I see coming this fall</h4><span class="blog_meta">by admin | dec 01, 2017</span><a class="blog_more" href="#">Read more</a></div></div></div>
            <div class="col-lg-4 blog_item_col"><div class="blog_item"><div class="blog_background" style="background-image:url('@Url.Content("~/assets/images/blog_2.jpg")')"></div><div class="blog_content d-flex flex-column align-items-center justify-content-center text-center"><h4 class="blog_title">Here are the trends I see coming this fall</h4><span class="blog_meta">by admin | dec 01, 2017</span><a class="blog_more" href="#">Read more</a></div></div></div>
            <div class="col-lg-4 blog_item_col"><div class="blog_item"><div class="blog_background" style="background-image:url('@Url.Content("~/assets/images/blog_3.jpg")')"></div><div class="blog_content d-flex flex-column align-items-center justify-content-center text-center"><h4 class="blog_title">Here are the trends I see coming this fall</h4><span class="blog_meta">by admin | dec 01, 2017</span><a class="blog_more" href="#">Read more</a></div></div></div>
        </div>
    </div>
</div>

<div class="newsletter">
    <div class="container">
        <div class="row">
            <div class="col-lg-6"><div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center"><h4>Newsletter</h4><p>Subscribe to our newsletter and get 20% off your first purchase</p></div></div>
            <div class="col-lg-6">
                @using (Html.BeginForm("Subscribe", "Home", FormMethod.Post))
                {
                    <div class="newsletter_form d-flex flex-md-row flex-column flex-xs-column align-items-center justify-content-lg-end justify-content-center">
                        <input id="newsletter_email" name="email" type="email" placeholder="Your email" required="required">
                        <button id="newsletter_submit" type="submit" class="newsletter_submit_btn trans_300" value="Submit">subscribe</button>
                    </div>
                }
                @if (TempData["SubscribeMsg"] != null)
                {<div class="text-success mt-2 text-center" style="font-weight:bold;">@TempData["SubscribeMsg"]</div>}
            </div>
        </div>
    </div>
</div>