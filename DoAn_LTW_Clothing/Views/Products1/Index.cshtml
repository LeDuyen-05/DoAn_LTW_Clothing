@model IEnumerable<DoAn_LTW_Clothing.Models.Product>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Danh sách Sản phẩm</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">Thêm mới</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark text-nowrap">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.MainImage)</th>
                            <th>@Html.DisplayNameFor(model => model.Category.CatSlug)</th>
                            <th>@Html.DisplayNameFor(model => model.Material)</th>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th class="text-center" style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                    <br />
                                    <small class="text-muted fst-italic">@item.Slug</small>
                                </td>
                                <td>
                                    <img src="~/assets/images/@item.MainImage"
                                         alt="@item.ProductName"
                                         class="img-thumbnail"
                                         style="width: 80px; height: 80px; object-fit: cover;"
                                         onerror="this.src='https://placehold.co/80x80?text=No+Image'" />
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @Html.DisplayFor(modelItem => item.Category.CatSlug)
                                    </span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Material)
                                </td>
                                <td>
                                    @if (item.IsActive == true)
                                    {
                                        <span class="badge bg-success">Hiển thị</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ẩn</span>
                                    }
                                </td>
                                <td>
                                    @if (item.CreatedAt.HasValue)
                                    {
                                        @item.CreatedAt.Value.ToString("dd/MM/yyyy")
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-sm btn-warning" title="Sửa">
                                            Sửa
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-sm btn-danger" title="Xóa">
                                            Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>