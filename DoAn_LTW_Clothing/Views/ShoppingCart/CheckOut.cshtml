@model List<DoAn_LTW_Clothing.Models.CartItem>

@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px; margin-bottom:40px">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <h4 class="mb-4">Thông tin thanh toán</h4>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <!-- Thông tin khách hàng -->
                        <div class="mb-3">
                            <label>Họ và tên</label>
                            <input name="FullName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Số điện thoại</label>
                            <input name="Phone" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Địa chỉ giao hàng</label>
                            <input name="Address" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Ghi chú</label>
                            <textarea name="Note" class="form-control"></textarea>
                        </div>

                        <hr />

                        <!-- Phương thức thanh toán -->
                        <div class="mb-3">
                            <label>Phương thức thanh toán</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="PaymentMethod" value="COD" checked>
                                    <label class="form-check-label">Thanh toán khi nhận hàng (COD)</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="PaymentMethod" value="Online">
                                    <label class="form-check-label">Thanh toán trực tuyến</label>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <!-- Danh sách sản phẩm -->
                        <h5>Đơn hàng</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>SL</th>
                                    <th>Giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Product.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>@((item.UnitPrice * item.Quantity).ToString("#,##0")) ₫</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Tổng tiền -->
                        <div class="text-end mb-3">
                            <strong>
                                Tổng tiền:
                                @Model.Sum(i => i.UnitPrice * i.Quantity).ToString("#,##0") ₫
                            </strong>
                        </div>

                        <button type="submit" class="btn btn-danger w-100">
                            XÁC NHẬN ĐẶT HÀNG
                        </button>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
