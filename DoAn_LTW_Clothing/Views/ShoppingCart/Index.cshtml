@model List<DoAn_LTW_Clothing.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/styles/categories_styles.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/styles/categories_responsive.css")">
}

<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumb -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="active">
                        <a href="#"><i class="fa fa-angle-right"></i>Giỏ hàng</a>
                    </li>
                </ul>
            </div>

            <!-- SIDEBAR -->
            <div class="sidebar">
                @Html.Action("DanhMuc", "Products")

                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Tìm kiếm & Lọc giá</h5>
                    </div>

                    <div class="sidebar_filter_form" style="margin-top: 15px;">
                        @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                        {
                            <div class="form-group" style="margin-bottom: 15px;">
                                <input class="form-control"
                                       placeholder="Nhập tên sản phẩm..."
                                       name="kw"
                                       style="font-size: 13px; border-radius: 0;">
                            </div>

                            <div class="form-group" style="margin-bottom: 15px;">
                                <select class="form-control" name="khoanggia">
                                    <option value="all">-- Chọn mức giá --</option>
                                    <option value="-300000">Dưới 300.000đ</option>
                                    <option value="300000-500000">300.000đ - 500.000đ</option>
                                    <option value="500000-1000000">500.000đ - 1.000.000đ</option>
                                    <option value="1000000-">Trên 1.000.000đ</option>
                                </select>
                            </div>

                            <button type="submit" class="filter_button" style="width: 100%;">
                                <span>TÌM KIẾM</span>
                            </button>
                        }
                    </div>
                </div>
            </div>

            <div class="main_content">

                <main class="col-12 col-lg-10 mx-auto">

                    <div class="card shadow-sm mx-auto" style="max-width: 1000px;">
                        <div class="card-body">
                            <h5 class="mb-3 text-center">Sản phẩm đã chọn</h5>

                            <div class="table-responsive">
                                <table class="table table-cart">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Sản phẩm</th>
                                            <th>Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>Thành tiền</th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @if (!Model.Any())
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center">
                                                    Chưa có sản phẩm trong giỏ hàng
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <!-- Ảnh -->
                                                    <td style="width:80px">
                                                        <img src="@Url.Content("~/assets/images/" + (item.Product.MainImage ?? "no-image.png"))"
                                                             alt="@item.Product.ProductName"
                                                             style="width:60px">
                                                    </td>

                                                    <!-- Tên + danh mục -->
                                                    <td>
                                                        <div class="fw-semibold">@item.Product.ProductName</div>
                                                        <div class="small text-muted">
                                                            @item.Product.Category.CategoryGroup.GroupName /
                                                            @item.Product.Category.CatName
                                                        </div>
                                                    </td>

                                                    <!-- Số lượng -->
                                                    <td>
                                                        @using (Html.BeginForm("Update", "ShoppingCart"))
                                                        {
                                                            <input type="hidden" name="id" value="@item.CartItemId" />
                                                            <input type="number"
                                                                   name="quantity"
                                                                   value="@item.Quantity"
                                                                   min="1"
                                                                   class="form-control form-control-sm"
                                                                   style="width:70px; display:inline-block" />
                                                            <button class="btn btn-sm btn-outline-primary mt-1">
                                                                Cập nhật
                                                            </button>
                                                        }
                                                    </td>

                                                    <!-- Đơn giá -->
                                                    <td>
                                                        @item.UnitPrice.ToString("#,##0") ₫
                                                    </td>

                                                    <!-- Thành tiền -->
                                                    <td>
                                                        @( (item.UnitPrice * item.Quantity).ToString("#,##0") ) ₫
                                                    </td>

                                                    <!-- Xóa -->
                                                    <td>
                                                        <a href="@Url.Action("Remove", "ShoppingCart", new { id = item.CartItemId })"
                                                           class="btn btn-sm text-danger"
                                                           onclick="return confirm('Xóa sản phẩm này?')">
                                                            Xóa
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- TỔNG TIỀN -->
                            <div class="row g-3 mt-2" style="width: auto">
                                <div class="col-12 col-md-4 ms-auto">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <span>Tạm tính</span>
                                                <strong>
                                                    @Model.Sum(i => i.UnitPrice * i.Quantity).ToString("#,##0") ₫
                                                </strong>
                                            </div>

                                            <div class="text-muted small">Phí gói: 0₫</div>
                                            <hr>

                                            @if (Session["UserId"] != null && int.TryParse(Session["UserId"]?.ToString(), out int userId))
                                            {
                                                <a href="@Url.Action("CheckOut","ShoppingCart")" class="btn btn-danger w-100 btn-rounded">
                                                    Tiếp tục
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("DangNhap","AppUsers")" class="btn btn-outline-danger w-100 btn-rounded">
                                                    Đăng nhập để thanh toán
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </main>

            </div>
            </div>
        </div>
</div>

@section scripts {
    <script src="@Url.Content("~/assets/plugins/Isotope/isotope.pkgd.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.js")"></script>
    <script src="@Url.Content("~/assets/plugins/easing/easing.js")"></script>
    <script src="@Url.Content("~/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.js")"></script>
    <script src="@Url.Content("~/assets/js/categories_custom.js")"></script>
}
