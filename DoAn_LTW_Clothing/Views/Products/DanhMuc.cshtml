@model IEnumerable<DoAn_LTW_Clothing.Models.CategoryGroup>

<div class="sidebar_section">
    <div class="sidebar_title">
        <h5>Product Category</h5>
    </div>

    <div class="sidebar_categories">
        @if (Model != null && Model.Any())
        {
            foreach (var group in Model)
            {
                <details style="margin-bottom: 15px; border-bottom: 1px solid #eee; padding-bottom: 10px;">

                    <summary style="cursor: pointer; font-weight: 500; list-style: none; outline: none;">
                        @group.GroupName
                        <i class="fa fa-angle-down" style="float: right;"></i>
                    </summary>

                    @if (group.Categories != null && group.Categories.Any())
                    {
                        <ul class="sidebar_sub_categories" style="padding-left: 20px; margin-top: 10px;">
                            @foreach (var sub in group.Categories)
                            {
                                <li>
                                    <a href="@Url.Action("Index", "Products", new { id = sub.CategoryId, type = "cat" })"
                                       style="color: #b5aec4; display: block; padding: 5px 0;">
                                        <i class="fa fa-caret-right" aria-hidden="true" style="margin-right:5px;"></i>
                                        @sub.CatName
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </details>
            }
        }
    </div>
</div>
