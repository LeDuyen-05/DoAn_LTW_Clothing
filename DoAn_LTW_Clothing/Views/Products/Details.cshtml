@model DoAn_LTW_Clothing.Models.Product

@{
    ViewBag.Title = Model.ProductName;
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal price = 0;
    if (Model.ProductVariants != null && Model.ProductVariants.Any())
    {
        price = Model.ProductVariants.Min(v => v.Price);
    }

    var listImages = new List<string>();
    if (!string.IsNullOrEmpty(Model.MainImage)) { listImages.Add(Model.MainImage); }
    if (Model.ProductImages != null && Model.ProductImages.Any()) { listImages.AddRange(Model.ProductImages.Select(x => x.ImageUrl)); }
    if (listImages.Count == 0) { listImages.Add("no-image.png"); }

    var relatedProducts = ViewBag.RelatedProducts as IEnumerable<DoAn_LTW_Clothing.Models.Product>;
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/styles/single_styles.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/styles/single_responsive.css")">

    <style>
        /* CSS CŨ GIỮ NGUYÊN */
        .single_product_thumbnails ul li {
            margin-bottom: 20px !important;
            height: auto !important;
            display: block !important;
            border: 1px solid #f0f0f0;
            cursor: pointer;
        }

            .single_product_thumbnails ul li img {
                width: 100%;
                display: block;
            }

            .single_product_thumbnails ul li.active {
                border: 1px solid #fe4c50;
            }

        .add_to_cart_button {
            background-color: #fe4c50 !important;
            width: 160px;
            height: 50px;
            display: flex !important;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            border: none;
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
            visibility: visible !important;
            opacity: 1 !important;
        }

            .add_to_cart_button:hover {
                background: #333 !important;
            }

        .product-red-style {
            border: 1px solid #f0f0f0;
            background: #fff;
            transition: all 0.3s;
            height: 100%;
            display: flex;
            flex-direction: column;
            position: relative;
            margin-bottom: 30px;
        }

            .product-red-style:hover {
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .product-img-red {
            height: 250px;
            width: 100%;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            position: relative;
            background-color: #f9f9f9;
        }

        .favorite-icon {
            position: absolute;
            top: 10px;
            left: 10px;
            font-size: 18px;
            color: #b5b5b5;
            cursor: pointer;
        }

        .product-info-red {
            padding: 15px;
            text-align: center;
            flex-grow: 1;
        }

        .product-title-red {
            font-size: 16px;
            font-weight: 500;
            margin-bottom: 10px;
            overflow: hidden;
            height: 40px;
        }

            .product-title-red a {
                color: #000;
                text-decoration: none;
            }

        .product-price-red {
            font-size: 18px;
            font-weight: bold;
            color: #fe4c50 !important;
            margin-bottom: 15px;
        }

        .btn-add-cart-red-block {
            display: block;
            width: 100%;
            background-color: #fe4c50;
            color: #fff !important;
            text-align: center;
            padding: 12px 0;
            text-transform: uppercase;
            font-weight: bold;
            font-size: 14px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: 0.3s;
            margin-top: auto;
        }

        /* --- CSS MỚI: RADIO BUTTON (KHÔNG DÙNG JS) --- */

        /* Ẩn nút tròn mặc định của Radio Button */
        .option-input {
            display: none;
        }

        /* Style cho nhãn (Label) giống cái nút */
        .option-label {
            display: inline-block;
            border: 1px solid #e1e1e1;
            border-radius: 50px;
            padding: 8px 25px;
            margin-right: 10px;
            margin-bottom: 10px;
            cursor: pointer;
            font-size: 14px;
            color: #333;
            background: #fff;
            min-width: 50px;
            text-align: center;
        }

        /* KHI RADIO ĐƯỢC CHỌN (CHECKED) -> ĐỔI MÀU LABEL NGAY SAU NÓ */
        /* Đây là kỹ thuật CSS thuần túy thay thế cho JS */
        .option-input:checked + .option-label {
            border: 1px solid #000;
            background-color: #000; /* Có thể đổi nền đen chữ trắng cho rõ */
            color: #fff;
            font-weight: bold;
        }
    </style>
}

<div class="container single_product_container">
    <div class="row">
        <div class="col">
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    @if (Model.Category != null)
                    {
                        <li><a href="@Url.Action("ProductByCategory", "Product", new { id = Model.CategoryId })"><i class="fa fa-angle-right"></i>@Model.Category.CatName</a></li>
}
                    <li class="active"><a href="#"><i class="fa fa-angle-right"></i>@Model.ProductName</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <div class="single_product_pics">
                <div class="row">
                    <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                        <div class="single_product_thumbnails">
                            <ul>
                                @for (int i = 0; i < listImages.Count; i++)
                                {
                                    <li class="@(i == 0 ? "active" : "")">
                                        <img src="@Url.Content("~/assets/images/" + listImages[i])" alt="" data-image="@Url.Content("~/assets/images/" + listImages[i])">
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 image_col order-lg-2 order-1">
                        <div class="single_product_image">
                            <div class="single_product_image_background" style="background-image:url('@Url.Content("~/assets/images/" + listImages[0])')"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="product_details">
                <div class="product_details_title"><h2>@Model.ProductName</h2><p>@Model.Summary</p></div>
                <div class="product_price">@price.ToString("#,##0") ₫</div>

                @using (Html.BeginForm("AddToCart", "ShoppingCart", FormMethod.Post))
                {
                    if (Model.ProductVariants != null && Model.ProductVariants.Any())
                    {
                        <div class="option_section" style="margin-top:20px;">
                            <span class="option_title" style="font-weight:bold; display:block; margin-bottom:10px;">
                                Chọn loại
                            </span>

                            @for (int i = 0; i < Model.ProductVariants.Count; i++)
                            {
                                var v = Model.ProductVariants.ElementAt(i);

                                <input type="radio"
                                       id="variant_@i"
                                       name="variantId"
                                       value="@v.VariantId"
                                       class="option-input"
                                       @(i == 0 ? "checked" : "") />

                                <label for="variant_@i" class="option-label">
                                    @v.Size - @v.Color
                                </label>
                            }
                        </div>
                    }

                    <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center" style="margin-top: 30px;">
                        <span>Quantity:</span>
                        <div class="d-flex align-items-center">
                            <input type="number"
                                   name="quantity"
                                   value="1"
                                   min="1"
                                   style="width: 60px; height: 50px; text-align: center; border: 1px solid #ddd; margin-right: 20px; margin-left: 10px;">

                            <button type="submit" class="add_to_cart_button">
                                ADD TO CART
                            </button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<div class="tabs_section_container">
    <div class="container">
        <div class="row"><div class="col"><div class="tabs_container"><ul class="tabs d-flex flex-sm-row flex-column align-items-left align-items-md-center justify-content-center"><li class="tab active" data-active-tab="tab_1"><span>Description</span></li><li class="tab" data-active-tab="tab_2"><span>Additional Information</span></li></ul></div></div></div>
        <div class="row"><div class="col"><div id="tab_1" class="tab_container active"><div class="row"><div class="col-lg-12 desc_col"><div class="tab_title"><h4>Description</h4></div><div class="tab_text_block"><p>@Html.Raw(Model.Summary)</p></div></div></div></div><div id="tab_2" class="tab_container"><div class="row"><div class="col additional_info_col"><div class="tab_title additional_info_title"><h4>Additional Information</h4></div><p>Material: <span>@Model.Material</span></p><p>SKU: <span>@(Model.ProductVariants != null && Model.ProductVariants.Any() ? Model.ProductVariants.First().SKU : "N/A")</span></p></div></div></div></div></div>
    </div>
</div>

<div class="related_products_section" style="margin-top: 50px; padding-bottom: 50px;">
    <div class="container">
        <div class="row">
            <div class="col-12"><h3 style="margin-bottom: 30px; font-weight: 600; text-align:center;">Sản phẩm liên quan</h3></div>
        </div>
        <div class="row">
            @if (relatedProducts != null && relatedProducts.Any())
            {
                foreach (var item in relatedProducts)
                {
                    decimal rPrice = 0;
                    if (item.ProductVariants != null && item.ProductVariants.Any()) { rPrice = item.ProductVariants.Min(v => v.Price); }

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="product-red-style">
                            <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">
                                <div class="product-img-red" style="background-image: url('@Url.Content("~/assets/images/" + (item.MainImage ?? "no-image.png"))');">
                                    <i class="fa fa-heart-o favorite-icon"></i>
                                    @if (item.IsActive == false)
                                    {<span style="position: absolute; top: 10px; right: 10px; background: #fe4c50; color: #fff; padding: 2px 8px; font-size: 10px; border-radius: 3px;">SOLD</span>}
                                </div>
                            </a>

                            <div class="product-info-red">
                                <h6 class="product-title-red"><a href="@Url.Action("Details", "Products", new { id = item.ProductId })">@item.ProductName</a></h6>
                                <div class="product-price-red">@rPrice.ToString("#,##0")<span>₫</span></div>                            </div>
                            <a href="@Url.Action("AddToCart", "ShoppingCart", new { productId = item.ProductId, quantity = 1 })" class="btn-add-cart-red-block">ADD TO CART</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center"><p>Không có sản phẩm liên quan nào.</p></div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="@Url.Content("~/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.js")"></script>
    <script src="@Url.Content("~/assets/js/single_custom.js")"></script>
}